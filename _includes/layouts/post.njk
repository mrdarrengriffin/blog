---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}
{%- if hero %}
	<img src="./hero.jpg" alt="" class="post-hero" eleventy:loading="eager">
{%- endif %}
<h1>{{ title }}</h1>
<p class="description">{{ description }}</p>

<ul class="post-metadata">
	<li><span>Posted:</span> <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
</ul>

{{ content | safe }}

<h4>Support me</h4>
<p>If you found this article useful and would like to support me, you can buy me a coffee below &#x2764;&#xFE0F;</p>
<a href="https://buymeacoffee.com/darrengriffin" target="_blank"><img eleventy:ignore src="https://img.buymeacoffee.com/button-api/?text=Buy%20me%20a%20coffee&emoji=&slug=darrengriffin&button_colour=FFDD00&font_colour=000000&font_family=Poppins&outline_colour=000000&coffee_colour=ffffff" height="50" alt="Buy me a coffee"></a>

{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li class="links-nextprev-next">Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
